{
  "root": true,
  "env": { "browser": true, "es2021": true, "node": true },
  "plugins": ["@typescript-eslint", "react", "prettier", "import", "react-refresh"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:react/recommended", "plugin:prettier/recommended", "plugin:import/recommended", "plugin:react-hooks/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "react/no-unknown-property": ["error", { "ignore": ["css"] }]
  }
}
